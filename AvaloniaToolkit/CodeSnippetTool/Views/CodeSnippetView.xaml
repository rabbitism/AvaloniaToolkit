<UserControl x:Class="AvaloniaToolkit.CodeSnippetTool.Views.CodeSnippetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AvaloniaToolkit.CodeSnippetTool.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaToolkit.CodeSnippetTool.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type vm:CodeSnippetViewModel}}"
             mc:Ignorable="d">
    <StackPanel>
        <Label Content="{Binding Title}" FontSize="16" />
        <Label Content="{Binding Shortcut}" />
    </StackPanel>
</UserControl>
